<% include partials/_header %>

<script type="text/javascript">
  function ConfirmDemo() {
  //Ingresamos un mensaje a mostrar
  var mensaje = confirm("Ponga CTRL+F");
  //Detectamos si el usuario acepto el mensaje
  if (mensaje) {
  alert("¡Gracias por aceptar!");
  }
  //Detectamos si el usuario denegó el mensaje
  else {
  alert("¡Haz denegado el mensaje!");
  }
  }
  </script>
  </head>
  <body>
  <form>
  <input type="button" onclick="ConfirmDemo()" value="Buscar Cliente" class = "btn btn-info" />
  </form>

    <div class="col-md-5">
      <div class="card-body">
                                    
        <form action="/add" method="POST">
          <div class="form-group">
            <input type="text" name="name" placeholder="Nombre" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="address" placeholder="Direcion" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="phone" placeholder="N° De Credito Fiscal O Factura" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="mul1" placeholder="CF O FA" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="mun" placeholder="Municipio" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="der" placeholder="Departamento" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="IVA" placeholder="IVA" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="NIT" placeholder="NIT" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="GIRO" placeholder="GIRO" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="pago" placeholder="Condiciones De Pago" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="ventade" placeholder="Venta De" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="cantidad" placeholder="Cantida1" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="cantidad2" placeholder="Cantidad2" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="cantidad3" placeholder="Cantidad3" class="form-control">
          </div>
          
          <div class="form-group">
            <div class="form-group">
              <input type="text" name="des" placeholder="Descripcion" class="form-control">
            </div>
            <div class="form-group">
              <div class="form-group">
                <input type="text" name="des2" placeholder="Descripcion2" class="form-control">
              </div>
              <div class="form-group">
                <div class="form-group">
                  <input type="text" name="descr3" placeholder="Descripcion3" class="form-control">
    
         
            
            

          <button type="submit" class="btn btn-primary">
          Guardar En Base De Datos
          </button>
        </form>
      </div>
    </div>
  </div>
</div>


      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>N°</td>
            <td>CF O FA</td>
            <td>N° De Credito Fiscal O Factura</td>
            <td>Nombre</td>
            <td>Direcion</td>
            <td>Departamento</td>
            <td>Municipio</td>
            <td>IVA</td>
            <td>NIT</td>
            <td>GIRO</td>
            <td>Condiciones De Pago</td>
            <td>Venta De</td>
            <td>Cantidad</td>
            <td>Cantidad2</td>
            <td>Cantidad3</td>
            <td>Descripcion</td>
            <td>Descripcion2</td>
            <td>Descripcion3</td>
          
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].phone %></td>
                <td><%= data[i].mul1 %></td>
                <td><%= data[i].name %></td>
                <td><%= data[i].address %></td>
                <td><%= data[i].mun %></td>
                <td><%= data[i].der %></td>
                <td><%= data[i].IVA %></td>
                <td><%= data[i].NIT %></td>
                <td><%= data[i].GIRO %></td>
                <td><%= data[i].pago %></td>
                <td><%= data[i].ventade %></td>
                <td><%= data[i].cantidad %></td>
                <td><%= data[i].cantidad2 %></td>
                <td><%= data[i].cantidad3%></td>
                <td><%= data[i].des %></td>
                <td><%= data[i].des2 %></td>
                <td><%= data[i].descr3 %></td>
                
                
                <td>
                  <a href="/update/<%= data[i].id %>" class="btn btn-info">Imprimir</a>
                  <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div



<% include partials/_footer %>

